<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background_dark_u"
    tools:context=".MainActivity">

    <!-- Decorative Track Lines Preview -->
    <View
        android:id="@+id/trackLine1"
        android:layout_width="4dp"
        android:layout_height="0dp"
        android:background="?attr/track_line_u"
        android:alpha="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="80dp" />

    <View
        android:id="@+id/trackLine2"
        android:layout_width="4dp"
        android:layout_height="0dp"
        android:background="?attr/track_line_u"
        android:alpha="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <View
        android:id="@+id/trackLine3"
        android:layout_width="4dp"
        android:layout_height="0dp"
        android:background="?attr/track_line_u"
        android:alpha="0.3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="80dp" />

    <!-- Game Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/game_title"
        android:textSize="48sp"
        android:textColor="?attr/cyan_u"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:shadowColor="?attr/pink_u"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="8"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/subtitleText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="40dp" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/game_subtitle"
        android:textSize="18sp"
        android:textColor="?attr/text_secondary_u"
        app:layout_constraintBottom_toTopOf="@+id/highScoreText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleText"
        android:layout_marginBottom="16dp" />

    <!-- High Score Display -->
    <TextView
        android:id="@+id/highScoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/high_score_default"
        android:textSize="16sp"
        android:textColor="?attr/yellow_u"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subtitleText"
        app:layout_constraintBottom_toTopOf="@+id/startButton"
        android:layout_marginBottom="40dp" />

    <!-- Start Game Button -->
    <Button
        android:id="@+id/startButton"
        android:layout_width="240dp"
        android:layout_height="64dp"
        android:text="@string/start_game"
        android:textSize="20sp"
        android:textStyle="bold"
        android:backgroundTint="?attr/cyan_u"
        android:textColor="?attr/background_dark_u"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/highScoreText"
        app:layout_constraintBottom_toTopOf="@+id/preferencesButton"
        android:layout_marginBottom="16dp" />

    <!-- Preferences Button -->
    <Button
        android:id="@+id/preferencesButton"
        android:layout_width="240dp"
        android:layout_height="56dp"
        android:text="@string/preferences"
        android:textSize="16sp"
        android:backgroundTint="?attr/purple_u"
        android:textColor="?attr/white_u"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startButton"
        app:layout_constraintBottom_toTopOf="@+id/leaderboardButton"
        android:layout_marginBottom="16dp" />

    <!-- Leaderboard Button -->
    <Button
        android:id="@+id/leaderboardButton"
        android:layout_width="240dp"
        android:layout_height="56dp"
        android:text="@string/leaderboard"
        android:textSize="16sp"
        android:backgroundTint="?attr/pink_u"
        android:textColor="?attr/white_u"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/preferencesButton"
        app:layout_constraintBottom_toTopOf="@+id/adView"
        android:layout_marginBottom="24dp" />

    <!-- AdMob Banner Ad -->
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-3940256099942544/6300978111"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
